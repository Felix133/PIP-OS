      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ],
      "preLaunchTask": "build-gamepad",
      "miDebuggerPath": "${workspaceFolder}/sudogdb",
